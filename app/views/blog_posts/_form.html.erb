<%= form_for blog_post do |form| %>
    <div>
        <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :title, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        <% if form.object.errors.any? %>
            <% form.object.errors.full_messages_for(:title).each do |message| %>
                <div class="text-red-500 text-xs italic"><%= message %></div>
            <% end %>
        <% end %>
    </div>

    <div class="mt-2">
        <%= form.rich_text_area :content %>
        <% if form.object.errors.any? %>
            <% form.object.errors.full_messages_for(:body).each do |message| %>
                <div class="text-red-500 text-xs italic"><%= message %></div>
            <% end %>
        <% end %>
    </div>

    <div>
        <%= form.label :published_at, class: "block text-sm font-medium text-gray-700" %>
        <%= form.datetime_select :published_at, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", include_blank: true  %>
        <% if form.object.errors.any? %>
            <% form.object.errors.full_messages_for(:published_at).each do |message| %>
                <div class="text-red-500 text-xs italic"><%= message %></div>
            <% end %>
        <% end %>
    </div>

    <div class="flex justify-between mt-2">
        <%= form.submit class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <%= link_to "Cancel", :back, class: "inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
<% end %>
